<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- This bean is the parent ApplicationContext for the WebApplicationContexts defined in the WARs. 
         The context files listed here should contain beans that are used by all WARs, 
         for example Services and DAO's. -->
    <bean id="sharedContext" class="org.springframework.context.support.ClassPathXmlApplicationContext">
        <constructor-arg>
            <list>
                <value>classpath*:services-context.xml</value>
                <value>classpath*:integration-context.xml</value>
            </list>
        </constructor-arg>
    </bean>

</beans>
